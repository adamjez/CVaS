@model CVaS.Web.Models.LayoutViewModel
@{
    Layout = "_AlgorithmLayout";
}

<h3>Description</h3>
<p>Algorithm for colorful image colorization in images by <a target="_blank" href="http://richzhang.github.io/colorization/">Richard Zhang, Phillip Isola, Alexei A. Efros</a></p>

<h3>API</h3>
<div class="well well-lg">
    <h4>Input</h4>
    <span>Single grayscale image</span><br />
    <span>Example: &quot;local://6762da80-d1e5-46a2-3818-08d472d3e445&quot;</span>

    <h4>Return</h4>
    <span>Colorized image</span>
</div>
@section Scripts {
    <script>
        var callback = function (fileId) {
            return "local://" + fileId;
        }

        var client = new AlgorithmClient('/algorithms/colorization', callback);
    </script>
}