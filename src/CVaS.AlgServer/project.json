{
  "version": "1.0.0-*",

  "dependencies": {
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.0.4"
    },
    "Microsoft.Extensions.Configuration": "1.0.2",
    "Microsoft.Extensions.Configuration.Json": "1.0.2",
    "Microsoft.Extensions.Configuration.EnvironmentVariables": "1.0.2",
    "RabbitMQ.Client": "4.1.1",
    "Microsoft.Extensions.Options.ConfigurationExtensions": "1.0.2",
    "Microsoft.Extensions.Logging": "1.0.2",
    "Microsoft.Extensions.Logging.Console": "1.0.2",
    "Microsoft.Extensions.Logging.Debug": "1.0.2",
    "Microsoft.Extensions.DependencyInjection": "1.0.2",
    "Microsoft.EntityFrameworkCore.SqlServer": "1.0.3",
    "CVaS.Shared": "1.0.0-*",
    "EasyNetQ": "2.0.4-netcore1438",
    "CVaS.DAL": "1.0.0-*",
    "LightInject": "4.1.5",
    "LightInject.Microsoft.DependencyInjection": "1.1.1",
    "FluentScheduler":  "5.1.4" 
  },
  "frameworks": {
    "netcoreapp1.0": {
      "imports": "dnxcore50"
    }
  },

  "buildOptions": {
    "emitEntryPoint": true
  },

  "runtimeOptions": {
    "configProperties": {
      "System.GC.Server": true
    }
  },

  "configurations": {
  },

  "publishOptions": {
    "include": [
      "appsettings.json",
      "appsettings.*.json",
      "Dockerfile",
      ".dockerignore"
    ]
  },

  "scripts": {
    "postpublish": [
      "docker build -t user/cvas.algserver %publish:OutputPath%"
    ]
  }
}
